{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@ahmedrowaihi/hlsify-worker",
  "compilerOptions": {
    "noUnusedLocals": true,
    "module": "CommonJS",
    "target": "ES2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
